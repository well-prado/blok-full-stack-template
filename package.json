{
  "name": "{{PROJECT_NAME}}",
  "version": "1.0.0",
  "description": "Complete Blok full-stack application with authentication, admin dashboard, and React frontend",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"sleep 8 && npm run dev:frontend\" --names \"backend,frontend\" --prefix-colors \"blue,green\" --kill-others-on-fail",
    "dev:nowatch": "concurrently \"npm run dev:backend\" \"sleep 8 && npm run dev:frontend:nowatch\" --names \"backend,frontend\" --prefix-colors \"blue,green\" --kill-others-on-fail",
    "dev:backend": "nodemon",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:frontend:nowatch": "cd frontend && npm run dev:nowatch",
    "start": "node dist/src/index.js",
    "reload": "node -r ts-node/register --env-file=.env.local ./src/index.ts",
    "build": "rimraf ./dist && tsc && copyfiles -u 1 src/nodes/**/*.html src/nodes/**/*.md dist/",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "infra:dev": "rimraf ./dist && tsc && copyfiles -u 1 src/nodes/**/*.html src/nodes/**/*.md dist/ && docker compose --file ./infra/docker-compose.yml up --build --watch",
    "infra:build": "tsc --watch -p tsconfig.json --diagnostics"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.4",
    "@types/pg": "^8.11.11",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "drizzle-kit": "^0.31.5",
    "esbuild": "^0.25.10",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.2.0",
    "@libsql/client": "^0.15.15",
    "@libsql/sqlite3": "^0.3.1",
    "@nanoservice-ts/api-call": "^0.1.29",
    "@nanoservice-ts/helper": "^0.1.5",
    "@nanoservice-ts/if-else": "^0.0.30",
