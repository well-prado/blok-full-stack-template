    "@opentelemetry/semantic-conventions": "^1.30.0",
    "@tanstack/react-query": "^5.90.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@well-prado/blok-admin-dashboard": "latest",
    "ai": "^5.0.54",
